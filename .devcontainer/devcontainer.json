// is a Docker image or Dockerfile which controls the tools available in your environment.
//
// See https://aka.ms/devcontainer.json for more information.
{
	"name": "BootCampProject",
	// Use "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
	// instead of the build to use a pre-built image.

	/*"build": {
        "context": ".",
        "dockerfile": "Dockerfile"
    },
	*/
	// Features add additional features to your environment. See https://containers.dev/features
	// Beware: features are not supported on all platforms and may have unintended side-effects.
	// "features": {
    //   "ghcr.io/devcontainers/features/docker-in-docker": {
    //     "moby": false
    //   }
    // }
	
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
	// Lifecycle scripts - run commands during container setup
	//"postCreateCommand": "cd /workspaces && curl \"https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip\" -o \"awscliv2.zip\" && unzip awscliv2.zip && sudo ./aws/install && cd /workspaces/AWS-CloudCamp",
	
	"postCreateCommand": "curl 'https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip' -o 'awscliv2.zip' && unzip awscliv2.zip && sudo ./aws/install && rm -rf aws awscliv2.zip",

	// Environment variables
	"containerEnv": {
		"AWS_CLI_AUTO_PROMPT": "on-partial",
		"AWS_ACCOUNT_ID": "549969920082"
	},
	
	// VS Code extensions
	"customizations": {
		"vscode": {
			"extensions": [
				"42Crunch.vscode-openapi",
				"amazonwebservices.aws-toolkit-vscode"
			]
		}
	},
	// Mount your AWS credentials from host
	"mounts": [
        "source=${localEnv:USERPROFILE}/.aws,target=/home/vscode/.aws,type=bind,consistency=cached"
    ]
}
